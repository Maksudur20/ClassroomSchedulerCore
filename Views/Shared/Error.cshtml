@model ErrorViewModel
@{
    ViewData["Title"] = "Error";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card border-danger">
                <div class="card-header bg-danger text-white">
                    <h2 class="text-center">
                        <i class="bi bi-exclamation-triangle-fill me-2"></i>Error
                    </h2>
                </div>
                <div class="card-body">
                    @if (Model.ShowRequestId)
                    {
                        <div class="alert alert-warning">
                            <strong>Request ID:</strong> <code>@Model.RequestId</code>
                        </div>
                    }

                    @if (Model.StatusCode.HasValue)
                    {
                        <h3 class="text-danger">Error @Model.StatusCode</h3>
                    }
                    else
                    {
                        <h3 class="text-danger">An error occurred</h3>
                    }

                    <p class="lead">@(string.IsNullOrEmpty(Model.ErrorMessage) ? "Sorry, an error occurred while processing your request." : Model.ErrorMessage)</p>

                    <div class="mt-4">
                        <a href="javascript:history.back()" class="btn btn-outline-secondary me-2">
                            <i class="bi bi-arrow-left me-1"></i> Go Back
                        </a>
                        <a asp-controller="Home" asp-action="Index" class="btn btn-primary">
                            <i class="bi bi-house-door me-1"></i> Return to Homepage
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
