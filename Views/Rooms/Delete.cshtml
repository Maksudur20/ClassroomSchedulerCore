@model Room
@{
    ViewData["Title"] = "Delete Room";
}

<div class="row mb-4">
    <div class="col-md-12">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
                <li class="breadcrumb-item"><a asp-action="Index">Rooms</a></li>
                <li class="breadcrumb-item active" aria-current="page">Delete</li>
            </ol>
        </nav>
        <h2>Delete Room</h2>
        <p class="lead">Are you sure you want to delete this room?</p>
    </div>
</div>

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header bg-danger text-white">
                <h5 class="mb-0">Warning</h5>
            </div>
            <div class="card-body">
                <div class="alert alert-warning">
                    <i class="bi bi-exclamation-triangle me-2"></i>
                    <span>This action cannot be undone. Deleting this room will remove all associated bookings.</span>
                </div>
                
                <dl class="row mt-4">
                    <dt class="col-sm-3">Name</dt>
                    <dd class="col-sm-9">@Model.Name</dd>

                    <dt class="col-sm-3">Location</dt>
                    <dd class="col-sm-9">@Model.Location</dd>

                    <dt class="col-sm-3">Capacity</dt>
                    <dd class="col-sm-9">@Model.Capacity seats</dd>

                    <dt class="col-sm-3">Has Projector</dt>
                    <dd class="col-sm-9">
                        @if (Model.HasProjector)
                        {
                            <i class="bi bi-check-circle-fill text-success"></i>
                            <span>Yes</span>
                        }
                        else
                        {
                            <i class="bi bi-x-circle-fill text-danger"></i>
                            <span>No</span>
                        }
                    </dd>

                    <dt class="col-sm-3">Has Computers</dt>
                    <dd class="col-sm-9">
                        @if (Model.HasComputers)
                        {
                            <i class="bi bi-check-circle-fill text-success"></i>
                            <span>Yes</span>
                        }
                        else
                        {
                            <i class="bi bi-x-circle-fill text-danger"></i>
                            <span>No</span>
                        }
                    </dd>

                    @if (!string.IsNullOrEmpty(Model.Description))
                    {
                        <dt class="col-sm-3">Description</dt>
                        <dd class="col-sm-9">@Model.Description</dd>
                    }
                </dl>
                
                <form asp-action="Delete" method="post" class="mt-4">
                    <input type="hidden" asp-for="Id" />
                    <div class="d-flex justify-content-between">
                        <a asp-action="Index" class="btn btn-outline-secondary">Cancel</a>
                        <button type="submit" class="btn btn-danger">Delete Permanently</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    
    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">Impact Assessment</h5>
            </div>
            <div class="card-body">
                <ul class="list-group list-group-flush">
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        Associated Bookings
                        <span class="badge bg-primary rounded-pill">@ViewBag.BookingsCount</span>
                    </li>
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        Future Bookings
                        <span class="badge bg-primary rounded-pill">@ViewBag.FutureBookingsCount</span>
                    </li>
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        Emergency Bookings
                        <span class="badge bg-danger rounded-pill">@ViewBag.EmergencyBookingsCount</span>
                    </li>
                </ul>
                
                <div class="alert alert-danger mt-3">
                    <strong>Note:</strong> Users with bookings in this room will be notified about the deletion.
                </div>
            </div>
        </div>
    </div>
</div>
