@model Room
@{
    ViewData["Title"] = "Room Details";
    var bookings = ViewBag.Bookings as List<Booking>;
}

<div class="row mb-4">
    <div class="col-md-12">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
                <li class="breadcrumb-item"><a asp-action="Index">Rooms</a></li>
                <li class="breadcrumb-item active" aria-current="page">Details</li>
            </ol>
        </nav>
        <h2>Room Details</h2>
    </div>
</div>

<div class="row">
    <div class="col-md-5">
        <div class="card mb-4">
            <div class="card-header">
                <h5 class="mb-0">@Model.Name</h5>
            </div>
            <div class="card-body">
                <div class="mb-3">
                    <h6 class="text-muted">Location</h6>
                    <p>@Model.Location</p>
                </div>
                <div class="mb-3">
                    <h6 class="text-muted">Capacity</h6>
                    <p>@Model.Capacity seats</p>
                </div>
                <div class="mb-3">
                    <h6 class="text-muted">Features</h6>
                    <div class="d-flex">
                        <div class="me-4">
                            <span class="badge @(Model.HasProjector ? "bg-success" : "bg-secondary")">
                                <i class="bi bi-projector me-1"></i> Projector
                            </span>
                        </div>
                        <div>
                            <span class="badge @(Model.HasComputers ? "bg-success" : "bg-secondary")">
                                <i class="bi bi-pc-display me-1"></i> Computers
                            </span>
                        </div>
                    </div>
                </div>
                @if (!string.IsNullOrEmpty(Model.Description))
                {
                    <div class="mb-3">
                        <h6 class="text-muted">Description</h6>
                        <p>@Model.Description</p>
                    </div>
                }
            </div>
            <div class="card-footer">
                <div class="d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-outline-secondary">Back to List</a>
                    <div>
                        @if (User.IsInRole("Admin") || User.IsInRole("Faculty"))
                        {
                            <a asp-controller="Bookings" asp-action="CreateForRoom" asp-route-roomId="@Model.Id" class="btn btn-success me-2">
                                <i class="bi bi-calendar-plus me-1"></i> Book Room
                            </a>
                        }
                        @if (User.IsInRole("Admin"))
                        {
                            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning me-2">
                                <i class="bi bi-pencil me-1"></i> Edit
                            </a>
                            <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">
                                <i class="bi bi-trash me-1"></i> Delete
                            </a>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-md-7">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="mb-0">Upcoming Bookings</h5>
                @if (User.IsInRole("Admin") || User.IsInRole("Faculty"))
                {
                    <a asp-controller="Bookings" asp-action="CreateForRoom" asp-route-roomId="@Model.Id" class="btn btn-sm btn-primary">
                        <i class="bi bi-plus"></i> New Booking
                    </a>
                }
            </div>
            <div class="card-body">
                @if (bookings != null && bookings.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>Date</th>
                                    <th>Time</th>
                                    <th>Title</th>
                                    <th>Booked By</th>
                                    <th>Status</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var booking in bookings)
                                {
                                    <tr>
                                        <td>@booking.StartTime.ToString("MM/dd/yyyy")</td>
                                        <td>@booking.StartTime.ToString("HH:mm") - @booking.EndTime.ToString("HH:mm")</td>
                                        <td>@booking.Title</td>
                                        <td>@booking.User.FullName</td>
                                        <td>
                                            @switch (booking.Status)
                                            {
                                                case BookingStatus.Available:
                                                    <span class="badge bg-success">Available</span>
                                                    break;
                                                case BookingStatus.Reserved:
                                                    <span class="badge bg-warning text-dark">Reserved</span>
                                                    break;
                                                case BookingStatus.Emergency:
                                                    <span class="badge bg-danger">Emergency</span>
                                                    break;
                                            }
                                        </td>
                                        <td>
                                            <a asp-controller="Bookings" asp-action="Details" asp-route-id="@booking.Id" class="btn btn-sm btn-info">
                                                <i class="bi bi-info-circle"></i>
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="alert alert-info">
                        No upcoming bookings for this room.
                    </div>
                }
            </div>
        </div>
    </div>
</div>
