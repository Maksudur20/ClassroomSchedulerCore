@model Booking
@{
    ViewData["Title"] = "Delete Booking";
}

<div class="row mb-4">
    <div class="col-md-12">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
                <li class="breadcrumb-item"><a asp-action="Index">Bookings</a></li>
                <li class="breadcrumb-item active" aria-current="page">Delete</li>
            </ol>
        </nav>
        <h2>Delete Booking</h2>
        <p class="lead">Are you sure you want to delete this booking?</p>
    </div>
</div>

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header bg-danger text-white">
                <h5 class="mb-0">Warning</h5>
            </div>
            <div class="card-body">
                <div class="alert alert-warning">
                    <i class="bi bi-exclamation-triangle me-2"></i>
                    <span>This action cannot be undone. The booking will be permanently removed from the system.</span>
                </div>
                
                <dl class="row mt-4">
                    <dt class="col-sm-3">Title</dt>
                    <dd class="col-sm-9">@Model.Title</dd>

                    <dt class="col-sm-3">Room</dt>
                    <dd class="col-sm-9">@Model.Room.Name</dd>

                    <dt class="col-sm-3">Date</dt>
                    <dd class="col-sm-9">@Model.StartTime.ToString("dddd, MMMM d, yyyy")</dd>

                    <dt class="col-sm-3">Time</dt>
                    <dd class="col-sm-9">@Model.StartTime.ToString("HH:mm") - @Model.EndTime.ToString("HH:mm")</dd>

                    <dt class="col-sm-3">Status</dt>
                    <dd class="col-sm-9">
                        <span class="badge @(Model.Status == BookingStatus.Available ? "bg-success" : 
                                        Model.Status == BookingStatus.Reserved ? "bg-warning text-dark" : 
                                        "bg-danger")">
                            @Model.Status.ToString()
                        </span>
                        @if (Model.IsEmergency)
                        {
                            <span class="badge bg-danger ms-1">Emergency</span>
                        }
                    </dd>

                    <dt class="col-sm-3">Booked By</dt>
                    <dd class="col-sm-9">@Model.User.FullName</dd>

                    @if (!string.IsNullOrEmpty(Model.Description))
                    {
                        <dt class="col-sm-3">Description</dt>
                        <dd class="col-sm-9">@Model.Description</dd>
                    }
                </dl>
                
                <form asp-action="Delete" method="post" class="mt-4">
                    <input type="hidden" asp-for="Id" />
                    <div class="d-flex justify-content-between">
                        <a asp-action="Index" class="btn btn-outline-secondary">Cancel</a>
                        <button type="submit" class="btn btn-danger">Delete Permanently</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    
    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">Impact Assessment</h5>
            </div>
            <div class="card-body">
                @if (Model.StartTime > DateTime.Now)
                {
                    <div class="alert alert-info">
                        <i class="bi bi-info-circle me-2"></i>
                        <span>This booking is for a future date. Deleting it will free up the room for other potential bookings.</span>
                    </div>
                }
                else if (Model.EndTime < DateTime.Now)
                {
                    <div class="alert alert-secondary">
                        <i class="bi bi-clock-history me-2"></i>
                        <span>This booking is for a past date. Deleting it will only affect historical records.</span>
                    </div>
                }
                else
                {
                    <div class="alert alert-danger">
                        <i class="bi bi-exclamation-circle me-2"></i>
                        <span>This booking is currently active. Deleting it may impact ongoing activities.</span>
                    </div>
                }
                
                @if (Model.IsEmergency)
                {
                    <div class="alert alert-warning mt-3">
                        <i class="bi bi-exclamation-triangle me-2"></i>
                        <span>This is an emergency booking. Please ensure the emergency situation has been resolved before deleting.</span>
                    </div>
                }
                
                <div class="mt-3">
                    <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-outline-primary w-100">
                        <i class="bi bi-arrow-left me-2"></i> Back to Details
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
